<div class="container">
  <div class="row">
    <% if @book2.errors.any? %>
    <h3><%= @book2.errors.count %>errors prohibited this book from being saved:</h3>
    <ul>
      <% @book2.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    </ul>
    <% end %>
    <% end %>
    <div class="col-md-6 col-md-offset-3">
      <h1>Editing Book</h1>
      <%= form_for(@book2) do |f| %>
      <div class="field.row">
        <h4>Title</h4>
        <%= f.text_field :title,class:"col-xs-12 book_title" %>
      </div>
      <div class="field.row">
        <h4>Opinion</h4>
        <%= f.text_area :body,class:"col-xs-12 book_body" %>
      </div>
      <div class="actions.row">
        <%= f.submit 'Update Book',class:"btn btn-primary col-xs-12" %>
      </div>
      <% end %>

      <%= link_to 'Show', book_path(@book2.id) %>
      <%= link_to 'Back', books_path %>
    </div>
  </div>
</div>