<div class="container">
  <div class="row">
    <% if @book.errors.any? %>
    <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
    <% @book.errors.full_messages.each do |message| %>
    <%= message %>
    <% end %>
    <% end %>
    <div class="col-xs-3">
      <h2>User info</h2>
      <%= attachment_image_tag current_user, :profile_image, :fill, 100,100, format: 'png',fallback: "no-image.png",size: "100x100" %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introdaction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to "", edit_user_path(current_user.id),class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_21304" %>
      </div>
      <h1>New book</h1>
      <%= form_for (@book) do|f| %>
      <div class="field.row">
        <h4>Title</h4>
        <%= f.text_field :title,class:"col-xs-12 book_title" %>
      </div>
      <div class="field.row">
        <h4>Opinion</h4>
        <%= f.text_area :body,class:"col-xs-12 book_body" %>
      </div>
      <div class="actons.row">
        <%= f.submit 'Create Book',class:"btn btn-primary col-xs-12" %>
      </div>
      <% end %>
    </div>

    <div class="col-xs-9">
      <h1>Books</h1>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3">
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><%= link_to (book.user) do %>
                <%= attachment_image_tag book.user,:profile_image, format: 'png',fallback: "no-image.png",size: "50x50" %>
                <% end %>
              </td>
              <td><%= link_to book.title ,book%></td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>